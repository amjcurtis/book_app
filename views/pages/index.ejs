<!DOCTYPE html>
<html>

<head>
  <%- include('./../layout/head') %>
</head>

<body>
  <header>
    <%- include('./../layout/header') %>
  </header>
  <main>
    <h4><p>Search by Title or Author</p></h4>
    <form action="/searches/show" method="post">
      <div id="search-box-container">
      <input id="search-box" type="text" name="search" placeholder="Enter title or author" required />
      </div>
      <fieldset>
        <div id="title-box-container">
        <label for="title">
          <span>Title</span>
          <input type="radio" name="search" value="title" required />
        </label>
      </div>
      </fieldset>
      <fieldset>
        <div id="author-box-container">
        <label for="author">
          <span>Author</span>
          <input type="radio" name="search" value="author" required />
        </label>
      </div>
      </fieldset>
      <button type="submit">Search the google books API</button>
    </form>
  </main>
  <footer>
    <%- include('./../layout/footer') %>
  </footer>
</body>

</html>